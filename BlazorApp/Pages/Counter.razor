@page "/counter"
@using Data
@inject FakeDatabase FakeDBContext

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount => FakeDBContext.GetValueOrDefault<int>(SourceName, 0);

    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    [Parameter]
    public string SourceName { get; set; } = "Counter";

    private void IncrementCount()
    {
        FakeDBContext.SetValue(SourceName, currentCount + IncrementAmount);
    }
}
